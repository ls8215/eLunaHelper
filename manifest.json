{
  "manifest_version": 3,
  "name": "eLuna Helper",
  "version": "1.0.0",
  "description": "A translation assistant for the eLuna platform.",
  "author": "Shuang Luo",
  "homepage_url": "https://www.shuangluo.fun",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://conferences.unite.un.org/eluna/*",
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://conferences.unite.un.org/eluna/*"],
      "js": ["content/content.js"]
    }
  ],
  "options_page": "options/options.html",
  "action": {
    "default_title": "eLunaAsst",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/deepseek.svg",
        "assets/icons/deepl.svg",
        "assets/icons/google.svg",
        "assets/icons/openai.svg",
        "assets/icons/copy.svg",
        "utils/*.js"
      ],
      "matches": ["https://conferences.unite.un.org/*"]
    }
  ]
}
